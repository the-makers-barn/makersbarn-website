# Postmark Email Service
# Get your API token from https://postmarkapp.com
POSTMARKAPP_API_TOKEN=your-postmark-api-token
POSTMARK_FROM_EMAIL=noreply@themakersbarn.com
POSTMARK_TO_EMAIL=contact@themakersbarn.com

# Slack Notifications
# Create incoming webhooks at https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_APP_EVENTS=https://hooks.slack.com/services/xxx/xxx/xxx
SLACK_WEBHOOK_USER_CONTACTS=https://hooks.slack.com/services/xxx/xxx/xxx

# Development Settings
# Set to 'true' to suppress Slack messages during development
SUPPRESS_SLACK_MESSAGES=false

# Logging
# Available levels: DEBUG, INFO, WARN, ERROR (default: INFO in production, DEBUG in development)
LOG_LEVEL=INFO
